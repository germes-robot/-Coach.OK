<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fitnes">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/dumbbell"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/dumbbell"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".MyApplication">
        <activity android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".TrainingChoosing"
            android:label="Choose training"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".TrainingDescription"
            android:label="Training Description"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".ExerciseChoosing"
            android:label="Choose exercises"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".ExerciseDescription"
            android:label="Exercise description" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>